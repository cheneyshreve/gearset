    <assignments>
        <description>Checks the Patient checkbox for any Consumer record with an MRN populated</description>
        <name>Check_Patient_Checkbox</name>
        <label>Check Patient Checkbox</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
